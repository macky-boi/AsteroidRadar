<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModelBinding"
            type="com.example.asteroidradar.AsteroidAppViewModel" />

        <variable
            name="asteroid"
            type="com.example.asteroidradar.model.Asteroid" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                app:title="@string/app_name"
                app:navigationIcon="@drawable/arrow_back"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{() -> viewModelBinding.navigateToListPage() }"
                android:contentDescription="@string/navigate_to_asteroid_list"/>
        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/image_size_large"
            android:layout_height="@dimen/image_size_large"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/spacing_large"
            app:layout_constraintTop_toBottomOf="@+id/topAppBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_medium">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/spacing_medium"
                android:paddingEnd="@dimen/spacing_medium"
                android:paddingTop="@dimen/spacing_medium"
                android:paddingBottom="@dimen/spacing_medium" >

                <LinearLayout
                    android:id="@+id/name_field"
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:contentDescription='@{"name. " + asteroid.name}'>
                    <TextView
                        android:id="@+id/name_key"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no"
                        android:text="@string/name_description" />

                    <Space
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/name_value"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no"
                        android:text="@{asteroid.name}"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/isHazardous_field"
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    app:layout_constraintTop_toBottomOf="@+id/name_field"
                    android:contentDescription='@{"is hazardous " + asteroid.isHazardous()}'
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:id="@+id/is_hazardous_key"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:importantForAccessibility="no"
                        android:layout_height="wrap_content"
                        android:text="@string/is_hazardous_key" />
                    <Space
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/is_hazardous_value"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no"
                        tools:text="ALSASKLJDH"
                        android:text="@{asteroid.hazardous}"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/approachDate_field"
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:contentDescription='@{"close approach date. " + asteroid.closeApproachDate}'
                    android:layout_marginTop="@dimen/spacing_small"
                    app:layout_constraintTop_toBottomOf="@+id/isHazardous_field"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:id="@+id/close_approachDate_key"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:importantForAccessibility="no"
                        android:layout_height="wrap_content"
                        android:text="@string/close_approach_date_key" />

                    <Space
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/close_approachDate_value"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:importantForAccessibility="no"
                        android:layout_height="wrap_content"
                        android:text="@{asteroid.closeApproachDate}" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/missDistance_field"
                    android:layout_width="0dp"
                    android:contentDescription='@{"miss distance. " + asteroid.missDistanceAstronomical}'
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    app:layout_constraintTop_toBottomOf="@+id/approachDate_field"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/miss_distance_key"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:importantForAccessibility="no"
                        android:layout_height="wrap_content"
                        android:text="@string/miss_distance_key" />

                    <Space
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/miss_distance_key_value"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no"
                        android:text="@{asteroid.missDistanceAstronomical}"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/velocity_field"
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:contentDescription='@{"relative velocity. " + asteroid.relativeVelocityKilometersPerSecond}'
                    android:layout_marginTop="@dimen/spacing_small"
                    app:layout_constraintTop_toBottomOf="@+id/missDistance_field"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:id="@+id/relative_velocity_key"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:importantForAccessibility="no"
                        android:layout_height="wrap_content"
                        android:text="@string/relative_velocity_key" />

                    <Space
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"/>

                    <TextView
                        android:id="@+id/relative_velocity_value"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:importantForAccessibility="no"
                        android:layout_height="wrap_content"
                        android:text="@{asteroid.relativeVelocityKilometersPerSecond}"/>
                </LinearLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/magnitude_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:contentDescription='@{"magnitude." + asteroid.absoluteMagnitude}'
                    android:layout_marginTop="@dimen/spacing_small"
                    app:layout_constraintTop_toBottomOf="@+id/velocity_field"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:id="@+id/absolute_magnitude_key"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:importantForAccessibility="no"
                        android:layout_height="wrap_content"
                        android:text="@string/absolute_magnitude_label" />

                    <TextView
                        android:id="@+id/absolute_magnitude_value"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/astronomical_unit_info_btn"
                        android:importantForAccessibility="no"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/padding_small"
                        tools:text="23.3"
                        app:flow_horizontalBias="1"
                        android:text='@{asteroid.absoluteMagnitude + " au"}'/>

                    <ImageView
                        android:id="@+id/astronomical_unit_info_btn"
                        android:layout_width="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_height="24dp"
                        android:src="@drawable/info_24dp"
                        android:contentDescription="@string/au_info_btn_description" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
